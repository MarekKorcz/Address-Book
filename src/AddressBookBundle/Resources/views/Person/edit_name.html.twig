{% extends "::base.html.twig" %}

{% block title %}Edit Name{% endblock %}

{% block body %}
    <div class="container">
    <div class="row">
        <h2>About Person</h2>
        <div>
            <button class="btn btn-primary" id="go-back">
                <strong>Back to Person's page</strong>
            </button>
        </div><br>
        {{ form_start(form) }}
            <div class="form">
                {{ form_label(form.name, 'Name:') }}<br>
                {{ form_widget(form.name) }} 
            </div>
            <div class="form">
                {{ form_label(form.surname, 'Surname:') }}<br>
                {{ form_widget(form.surname) }}
            </div>
            <div class="form">
                {{ form_label(form.description, 'Description:') }}<br>
                {{ form_widget(form.description) }} 
            </div>
        {{ form_end(form) }}
    </div>   
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}
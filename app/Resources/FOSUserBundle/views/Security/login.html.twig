{% extends "::base.html.twig" %}

{% block title %}Login Form{% endblock %}

{% block body %}
  
<div class="container">  
    <h1>Welcome to AddressBook</h1>
    <div class="row">
        <div class="col-xs-6">
            <h2>Please, log in:</h2>
            {% block fos_user_content %}
                {% include('@FOSUser/Security/login_content.html.twig') %}
            {% endblock fos_user_content %}
            <a href="{{ path('fos_user_registration_register') }}">
                <h3>Or register</h3>
            </a>
        </div>
        <div class="col-xs-6">
            {% block image %}  
                <img src="{{ asset('web/bundles/framework/images/Address-book.png') }}" alt="Addres-book" />
            {% endblock image %}
        </div>
    </div>
</div>
{% endblock %}